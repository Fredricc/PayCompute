@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-primary"><i class="fa-lg text-primary fa fa-sign-out" aria-hidden="true" style="margin-right: 0.3em"></i>Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
            <a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Register"><i class="fa-lg text-primary fa fa-registered" aria-hidden="true" style="margin-right: 0.3em"></i>Register</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-primary" asp-area="Identity" asp-page="/Account/Login"><i class="fa fa-sign-out fa-lg" aria-hidden="true" style="margin-right: 0.3em"></i>Login</a>
    </li>
}
</ul>
