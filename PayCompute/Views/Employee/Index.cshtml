@model IEnumerable<EmployeeIndexViewModel>

@{
    ViewBag.Title = "Employee";}

    <div class="row">
        <div class="col-md-12 grid-margin">
            <div class="card">
                <div class="card-body">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active" aria-current ="page">Employee List</li>
                    </ol>
                </nav><br /><br />
                <div class="col-md-12 table-responsive-md">
                    <a class="btn btn-xs btn-outline-success float-md-right" asp-action= "Create">New Employee</a>
                    <table class="table table-responsive-md">
                       <thead>
                           <tr>
                                <th>Employee No.</th>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>Gender</th>
                                <th>Designation</th>
                                <th>City</th>
                                <th>Joined</th>
                                <th class="text-warning">Action</th>
                           </tr>
                       </thead>
                       <tbody>
                           @foreach(var item in Model)
                            {
                                <tr>
                                    <a asp-action="Details" asp-route-id="@item.Id">
                                        @item.EmployeeNo
                                    </a>
                                    <td>@item.EmployeeNo</td>
                                    <td>
                                        <img alt="image" src="@Url.Content(item.ImageUrl)"/>
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.Gender</td>
                                    <td>@item.Designation</td>
                                    <td>@item.City</td>
                                    <td>@item.DateJoined</td>
                                    <td>
                                        <a class="text-primary" asp-action="Edit" asp-route-ID ="@item.Id">
                                            <i class="fa fa-pencil" aria-hidden="true"></i>Edit
                                        </a>
                                        <a class="text-success" asp-action="Details" asp-route-ID="@item.Id">
                                            <i class="fa fa-info-circle" aria-hidden="true"></i>Details
                                        </a>
                                        <a class="text-danger" asp-action="Delete" asp-route-ID="@item.Id">
                                            <i class="fa fa-trash-o" aria-hidden="true"></i>Delete
                                        </a>
                                            @item.DateJoined</td>

                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>
